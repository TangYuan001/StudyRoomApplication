<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/time_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF267CD6">
        <RelativeLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/plan_tv"
                android:text="计划行事"
                android:textSize="18dp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:background="@drawable/bg_select_tv"
                android:layout_width="100dp"
                android:layout_height="30dp" />
            <TextView
                android:id="@+id/else_tv"
                android:text="随心所欲"
                android:textSize="18dp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:background="@drawable/bg_unselect_tv"
                android:layout_toRightOf="@id/plan_tv"
                android:layout_width="100dp"
                android:layout_height="30dp" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFD6D8DA"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/mine_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF267CD6">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="24dp"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:text="我" />
            <Button
                android:id="@+id/friend_tv"
                android:layout_width="35dp"
                android:layout_height="25dp"
                android:textSize="14dp"
                android:text="圈儿"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/bg_unselect_tv"
                android:textColor="#ffffff"/>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/bg_pic"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="160dp" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/my_head_image"
            android:src="@drawable/icon_user_head"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"/>
        <TextView
            android:id="@+id/my_name_tv"
            android:textColor="#ffffff"
            android:text="汤圆"
            android:background="#FF267CD6"
            android:layout_toRightOf="@id/my_head_image"
            android:layout_alignTop="@id/my_head_image"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/change_name_btn"
            android:text="修改昵称"
            android:layout_toRightOf="@id/my_head_image"
            android:layout_below="@id/my_name_tv"
            android:textColor="#ffffff"
            android:background="@drawable/bg_round_btn"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_width="70dp"
            android:layout_height="30dp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#FFD6D8DA"/>
    <RelativeLayout
        android:id="@+id/about_rl"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/about_title"
            android:text="关于我们"
            android:textSize="18dp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@drawable/icon_right_arrow"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#FFD6D8DA"/>
    <RelativeLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:text="登出"
            android:textSize="20dp"
            android:textColor="#FF267CD6"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#FFD6D8DA"/>
    

</LinearLayout>
